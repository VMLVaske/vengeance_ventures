{
  "name": "vengeance_ventures",
  "description": "Vengeance Ventures company website",
  "version": "1.18.3",
  "license": "MIT",
  "author": "Vengeance Ventures",
  "scripts": {
    "dev": "hugo server",
    "build": "hugo --gc --minify --forceSyncStatic",
    "preview": "hugo server --disableFastRender --navigateToChanged --watch --forceSyncStatic -e production --minify",
    "update-modules": "hugo mod clean --all && hugo mod get -u ./... && hugo mod tidy",
    "format": "prettier -w ."
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.5.1",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.4.2",
    "prettier-plugin-go-template": "0.0.15",
    "prettier-plugin-tailwindcss": "^0.6.10",
    "tailwind-bootstrap-grid": "^5.1.0",
    "tailwindcss": "^3.4.17"
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {},
      "autoprefixer": {}
    }
  }
}
